@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
@{
    ViewBag.Title = "Spis roli";
}

<h2>@ViewBag.Title</h2>

@Html.ActionLink("Utwórz nową rolę", "Create") | @Html.ActionLink("Zarządzanie rolami", "ManageUserRoles")
<hr />
<div>
    @foreach (var role in Model)
    {
        <p>
            <strong>@role.Name | </strong>
            <span onclick="return confirm('Na pewno chcesz usunać tę rolę?')"><a href="/Roles/Delete?RoleName=@role.Name" class="delLink" style="color:red;">Usuń</a></span> |
            @Html.ActionLink("Edytuj", "Edit", new { roleName = @role.Name })
        </p>
    }
</div>