@{
    ViewBag.Title = "Tworzenie roli";
}

<h2>@ViewBag.Title</h2>
@Html.ActionLink("Spis roli", "Index") | @Html.ActionLink("Zarządzanie rolami", "ManageUserRoles")
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div>
        Role name
    </div>
    <p>
        @Html.TextBox("RoleName")
    </p>
    <input type="submit" value="Zapisz" />
}