@model Wspolnota.Models.RegisterViewModel
@{
    ViewBag.Title = "Rejestracja";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Tworzenie nowego konta.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <label class="col-md-2 control-label font-weight-bold" for="Email">*Email:</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label font-weight-bold" for="Password">*Hasło:</label>
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label font-weight-bold" for="ConfirmPassword">*Potwierdź hasło:</label>
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <br/>
    <div class="form-group">
        <label class="col-md-2 control-label font-weight-bold" for="FirstName">Imię:</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label font-weight-bold" for="LastName">Nazwisko:</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label font-weight-bold" for="City">Miasto:</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label font-weight-bold" for="Address">Adres:</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label font-weight-bold" for="PostalCode">Kod pocztowy:</label>
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label font-weight-bold" for="BirthDate">Data urodzenia:</label>
        <div class="col-md-10">
            <input class="text-box single-line"  id="BirthDate" name="BirthDate" type="date">
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label font-weight-bold" for="LastName">Płeć</label>
        <div class="col-md-10">
            <input htmlattributes="{ class = form-control }" id="Gender" name="Gender" type="radio" value="True"> Mężczyzna
            <input htmlattributes="{ class = form-control }" id="Gender" name="Gender" type="radio" value="False"> Kobieta
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Zarejestruj" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
