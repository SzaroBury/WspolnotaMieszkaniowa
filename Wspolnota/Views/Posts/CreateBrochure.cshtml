@model Wspolnota.Models.Brochure
@{
    ViewBag.Title = "Tworzenie";
    var id = (int)ViewData["id"];
}

<h2>Tworzenie</h2>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Reklama</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @*Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })*@
        <div class="control-label col-md-2 font-weight-bold">Tytuł: </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control col-md-8" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2 font-weight-bold">Obraz: </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Image, new { htmlAttributes = new { @class = "form-control col-md-8" } })
            @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-md-2 font-weight-bold">Link: </div>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Link, new { htmlAttributes = new { @class = "form-control col-md-8" } })
            @Html.ValidationMessageFor(model => model.Link, "", new { @class = "text-danger" })
        </div>
    </div>

    @Html.Hidden("CommunityId", id)

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="button" onclick="location.href='@Url.Action("Index", new { id = id })'" class="btn btn-sm btn-outline-secondary">Powrót</button>
            <input type="submit" value="Dodaj" class="btn btn-primary" />
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
