@model Wspolnota.Models.Post

@{
    ViewBag.Title = "Usuwanie";
}

<h2>@ViewBag.Title</h2>

<h3>Czy na pewno chcesz usunąć tego posta?</h3>
<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Grupa:</dt><dd>@Html.DisplayFor(model => model.Community.Name)</dd>
        <dt>Tytuł postu:<dd>@Html.DisplayFor(model => model.Title)</dd>
        <dt>Autor:</dt><dd>@Model.CreatedAt.ToLongDateString(), @Model.CreatedAt.ToShortTimeString()</dd>
        <dt>Dodano:</dt><dd>@Html.DisplayFor(model => model.CreatedAt)</dd>
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <button type="button" onclick="location.href='@Url.Action("Index", new { id = Model.PostId })'" class="btn btn-sm btn-outline-secondary">Powrót</button>
        <input type="submit" value="Usuń" class="btn btn-primary" />
    </div>
    }
</div>
