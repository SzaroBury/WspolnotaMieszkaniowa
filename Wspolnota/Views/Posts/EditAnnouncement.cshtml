@model Wspolnota.Models.Announcement

@{
    ViewBag.Title = "Edytowanie ogłoszenia";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("EditAnnouncement", "Posts"))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>@Model.Title</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.PostId)
    @Html.HiddenFor(model => model.AuthorId)
    @Html.HiddenFor(model => model.CommunityId)
    @Html.HiddenFor(model => model.CreatedAt)

    <div class="form-group">
        <label class="control-label col-md-2 font-weight-bold" for="Title">Tytuł</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control col-md-8" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2 font-weight-bold" for="Content">Treść</label>
        <div class="col-md-10">
            <textarea class="form-control col-md-12" id="Content" name="Content" style="Height:150px;">@Model.Content</textarea>
            @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="button" onclick="location.href='@Url.Action("Index", new { id = Model.CommunityId })'" class="btn btn-sm btn-outline-secondary">Powrót</button>
            <input type="submit" value="Zastosuj" class="btn btn-primary" />
        </div>
    </div>
</div>
}
