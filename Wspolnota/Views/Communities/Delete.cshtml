@model Wspolnota.Models.Community

@{
    ViewBag.Title = "Usuwanie";
}

<h2 class="col-sm-3">Usuwanie</h2>

<h3>Jesteś pewny, że chcesz usunąć grupę @Model.Name?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Identyfikator grupy:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CommunityID)
        </dd>

        <dt>
            Nazwa:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Opis grupy:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            Link do zdjęcia profilowego grupy:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Image)
        </dd>

        <dt>
            Profilowe zdjęcie:
        </dt>
        <dd>
            <img src=@Model.Image alt=@Model.Name />
        </dd>

        <dt>
            Liczba postów:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Posts.Count)
        </dd>

        <dt>
            Liczba użytkowników w grupie:
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Users.Count)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Usuń" class="btn btn-primary" /> |
            @Html.ActionLink("Powrót do listy", "Index")
        </div>
    }
</div>
